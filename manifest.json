{
  "manifest_version": 2,

  "name": "IMDB Search",
  "description": "Shows IMDb page of movie",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://www.omdbapi.com/*",
    "contextMenus"
  ],
  "background": {
    "scripts": ["main.js"]
  },
  "icons": {
    "16": "icon-context.png"
  }
}